{
	"name": "standard-dev-demo",
	"version": "1.1.1",
	"description": "Stack: pnpm, eslint, prettier, commitizen, husky, commitlint",
	"main": "index.ts",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
